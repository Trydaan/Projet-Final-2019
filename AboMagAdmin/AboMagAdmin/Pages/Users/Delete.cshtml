@page "{id:int}"
@model AboMagAdmin.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Suppression";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Suppression</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce client?</h3>
<p class="text-danger">@Model.ErrorMessage</p>
<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.DateNaissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.DateNaissance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.LieuNaissance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LieuNaissance)
        </dd>
        
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>
