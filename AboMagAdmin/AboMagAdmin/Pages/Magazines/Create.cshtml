@page
@model AboMagAdmin.Pages.Magazines.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Magazine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Magazine.Titre" class="control-label"></label>
                <input asp-for="Magazine.Titre" class="form-control" />
                <span asp-validation-for="Magazine.Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magazine.Nb" class="control-label"></label>
                <input asp-for="Magazine.Nb" class="form-control" />
                <span asp-validation-for="Magazine.Nb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magazine.Description" class="control-label"></label>
                <textarea asp-for="Magazine.Description" class="form-control" ></textarea>
                
                <span asp-validation-for="Magazine.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magazine.PrixAnnuel" class="control-label"></label>
                <input asp-for="Magazine.PrixAnnuel" class="form-control" />
                <span asp-validation-for="Magazine.PrixAnnuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
