@model AboMagAdmin.Pages.Abo.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Abonnement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Abonnement.Debut" class="control-label"></label>
                <input asp-for="Abonnement.Debut" class="form-control" />
                <span asp-validation-for="Abonnement.Debut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonnement.Fin" class="control-label"></label>
                <input asp-for="Abonnement.Fin" class="form-control" />
                <span asp-validation-for="Abonnement.Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abonnement.MagazineId" class="control-label"></label>
                <select asp-for="Abonnement.MagazineId" class ="form-control" asp-items="ViewBag.MagazineId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Abonnement.UserId" class="control-label"></label>
                <select asp-for="Abonnement.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

