@model AboMagAdmin.Pages.Abo.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abonnement[0].Debut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonnement[0].Fin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonnement[0].Magazine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonnement[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
